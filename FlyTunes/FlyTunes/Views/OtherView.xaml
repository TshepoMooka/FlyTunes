<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FlyTunes.Views.OtherView"
             Title="{Binding Title}">

    <ScrollView>
    <StackLayout>

        <Image Source="tuney.png">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding MyImageCommand}">
                    
                </TapGestureRecognizer>
            </Image.GestureRecognizers>
            
        </Image>

        <Label Text="Food" HorizontalOptions="Center" Margin="20"/>
        <Image Source="food.png" />
        <Label Text="Cars" HorizontalOptions="Center" Margin="20" />
        <Image Source="car.png" />
        <Label Text="Animals" HorizontalOptions="Center" Margin="20" />
        <Image Source="animals.png" />
        <Label Text="Houses" HorizontalOptions="Center" Margin="20" />
        <Image Source="houses.png" />


    </StackLayout>
    </ScrollView>


</ContentPage>